{
    "manifest_version": 3,
    "name": "Youtube Focus Mode",
    "version": "1.0",
    "description":"BLocks recommendation video and comments on Youtube video for distraction-free viewing",
    "permissions": ["activeTab"],
    "host_permissions": ["*://*.youtube.com/*"],
    "content_scripts":[
      {
          "matches": ["*://*.youtube.com/*"],
          "js": ["content.js"],
          "css": ["styles.css"],
          "run_at": "document_idle"
      }
    ],
    "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}